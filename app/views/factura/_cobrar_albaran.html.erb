
<div id="importe_cobrar" class="importe_grande">
  A Cobrar<br/><%= params[:importe] %> €
</div>

<div id="importe_devolver" class="devolver_grande">&nbsp;</div>

<div class="formulario_dcha">

<%= inicio_formulario( { :action => 'aceptar_cobro', :importe => params[:importe], :albaran_id => params[:albaran_id] }, false ) %>
  <%= hidden_field 'factura', 'importe', :value => params[:importe] %>
  <div class="linea">
    Fecha de Pago<br/><%= date_select('factura', 'fecha') %>
  </div>
  <div class="linea"><br/></div>
  <div class="linea">
    <%= selector 'Forma de Pago', 'forma_pago', 'id', @formasdepago.map {|u| [u.nombre,u.id]} %>
  </div>
  <div class="linea"><br/></div>
  <div class="linea">
    <%= texto 'Recibido (€)', 'recibido', '' %>
      <%= observe_field( "formulario_campo_recibido_" , :frequency => 1, :update => "importe_devolver", :with => "'recibido='+value", :url => {:action => :calcula_cambio, :importe => params[:importe]} ) %>
  </div>
  <div class="linea"><br/></div>
  <div class="linea">
    <div class='elemento'>
      <%= check_box("imprimeticket", "imprimeticket", {:checked => true}, true, false) %> Imprimir ticket?
    </div>
  </div>
<%= final_formulario({:etiqueta => "Cobrar"})%>

</div>


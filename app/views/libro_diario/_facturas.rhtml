<!-- Sublistado de Facturas para Resumen -->

<% if params[:tipo] == "servicios" %>
  <%= cabecera_sublistado "Facturas de Servicios (otros gastos)", "resumen_facturas_servicios", params[:update] %>
<% else %>
  <%= cabecera_sublistado "Facturas de " + params[:tipo].capitalize, params[:tipo] == "compras"?"resumen_facturas_compras":"resumen_facturas_ventas", params[:update] %>
<% end %>
<% i = 0 %>
<% for objeto in @facturas %>
  <div id="<% params[:update] %>_sub_<%= i += 1 %>" class="fila" >
    <%= fila_sublistado objeto %>
    <div class="listado_derecha">
      <%= icono('Exclamation', {:title => "La factura no estÃ¡ completamente pagada!", :style => ( objeto.pagado ? 'display: none;' : '') }) %>
    </div>
  </div>
<% end %>
<%= final_sublistado %>
<br/>

<!--- Sublistado de albaranes de un producto --->

<% if compra %>
  <%= cabecera_sublistado "Compras", ["fecha","codigo","factura.codigo","proveedor.nombre"], params[:update] %>
<% else %>
  <%= cabecera_sublistado "Ventas", ["fecha","factura.codigo","cliente.nombre"], params[:update] %>
<% end %>
<% i = 0 %>
<% for objeto in @albaranes %>
  <div id="<%= params[:update] %>_linea_<%= (i += 1).to_s %>" class="fila" >
    <%= fila_sublistado objeto %>
    <div class="listado_derecha">
      <%# modal icono("Search",{:title => "Ver Albaran"}), { :controller => 'albaran_lineas', :action => 'lineas', :albaran_id => objeto.id, :update => "MB_content" }, compra ? "Albaran de Compra" : "Albaran de Venta" %>
    </div>
  </div>
<% end %>
<%= final_sublistado %>
<br/>

